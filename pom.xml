    <jetty-port>8080</jetty-port>
    <jetty-version>6.1.19</jetty-version>

    <log4j-version>1.2.14</log4j-version>
    <junit-version>4.5</junit-version>

    <!--
    <scalaVersion>2.8.0.Beta1-RC7</scalaVersion>
    -->
    <scalaVersion>2.7.7</scalaVersion>

    <scala-plugin-version>2.9.1</scala-plugin-version>
    <slf4j-version>1.5.6</slf4j-version>

  </properties>

  <url>http://ssp.fusesource.org</url>

  <organization>
    <name>FuseSource</name>
    <url>http://fusesource.com/</url>
  </organization>

  <licenses>
    <license>
      <name>GNU AFFERO GENERAL PUBLIC LICENSE (AGPL) Version 3.0</name>
      <url>http://www.fsf.org/licensing/licenses/agpl.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <mailingLists>
    <mailingList>
      <name>Development List</name>
      <subscribe>ssp-dev-subscribe@fusesource.org</subscribe>
      <unsubscribe>ssp-dev-unsubscribe@fusesource.org</unsubscribe>
